<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:id="@+id/orderInfo_btn_back"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_return"
                android:background="#00000000"
                android:layout_marginLeft="10dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        <TextView
                android:text="订单详情"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>

    </RelativeLayout>
    <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="150dp"
                    android:layout_height="40dp">
                <TextView
                        android:text="订单信息"
                        android:layout_margin="10dp"
                        android:textSize="17sp"

                        android:layout_width="150dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                <TextView
                        android:text="订单编号："
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"

                        android:layout_width="135dp"
                        android:layout_height="match_parent"/>
                <TextView
                        android:id="@+id/order_number"
                        android:text="1111111"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                <TextView
                        android:text="支付宝交易号："
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"

                        android:layout_width="135dp"
                        android:layout_height="match_parent"/>
                <TextView
                        android:id="@+id/order_alipay_number"
                        android:text="111111112312333333232432423"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                <TextView
                        android:text="创建时间："
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"

                        android:layout_width="135dp"
                        android:layout_height="match_parent"/>
                <TextView
                        android:id="@+id/order_create_time"
                        android:text="2019-06-10 11:39:55"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                <TextView
                        android:text="成交时间："
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"

                        android:layout_width="135dp"
                        android:layout_height="match_parent"/>
                <TextView
                        android:id="@+id/order_deal_time"
                        android:text="2019-06-10 11:40:55"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</LinearLayout>