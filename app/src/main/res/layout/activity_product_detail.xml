<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageButton
                        android:id="@+id/product_btn_back"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/btn_return"
                        android:background="#00000000"
                        android:layout_marginLeft="10dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"/>
                <TextView
                        android:text="商品详情"
                        android:textSize="20sp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"/>

            </RelativeLayout>
            <ImageView
                    android:id="@+id/product_iv"
                    android:background="@color/gray"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"/>
            <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                <TextView
                        android:id="@+id/product_tv_name"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="商品名称:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/product_tv_relname"
                        android:layout_toRightOf="@+id/product_tv_name"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/product_tv_price0"
                        android:text="价格:"
                        android:textSize="17sp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/product_tv_price1"
                        android:text="139"
                        android:textSize="25sp"
                        android:textColor="@color/red"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/product_tv_price0"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/product_tv_price2"
                        android:text="元"
                        android:textSize="17sp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/product_tv_price1"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/product_tv_stock"
                        android:text="剩余"
                        android:textSize="17sp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>
            <TextView
                    android:id="@+id/product_tv_describe0"
                    android:text="商品详情:"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/product_tv_describe"
                    android:text=""
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>
    <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <ImageButton
                android:id="@+id/product_btn_collection"
                android:src="@drawable/transition_pd_collection"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        <TextView
                android:text="收藏"
                android:layout_below="@+id/product_btn_collection"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/product_btn_cart"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:text="加入购物车"
                android:background="@drawable/button_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/product_btn_buy"
                android:layout_toLeftOf="@+id/product_btn_cart"
                android:layout_marginRight="10dp"
                android:text="立即购买"
                android:background="@drawable/button_shape"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</FrameLayout>