<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:background="@color/bg_gray"
             android:orientation="vertical"
             android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="我的商城"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="20sp"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <ImageView
                android:id="@+id/login_bg_bg"
                android:src="@mipmap/login_bg"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/my_ib_login"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/btn_login_normal"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_centerVertical="true"
        />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/my_collection"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:onClick="showAllCollection"
            android:background="@color/white"
            android:layout_height="50dp">
        <ImageView
                android:paddingLeft="10dp"
                android:id="@+id/my_collection_icon"
                android:layout_centerVertical="true"
                android:src="@mipmap/my_collection_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/my_collection_icon"
                android:text="我的收藏"
                android:textSize="18sp"
        />
        <TextView
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="查看所有收藏"
                android:textSize="14sp"
                android:textColor="@color/gray"
        />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/my_order"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:onClick="showAllOrder"
            android:background="@color/white"
            android:layout_height="50dp">
        <ImageView
                android:paddingLeft="10dp"
                android:id="@+id/my_order_icon"
                android:layout_centerVertical="true"
                android:src="@mipmap/my_order_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/my_order_icon"
                android:layout_centerVertical="true"
                android:text="我的订单"
                android:textSize="18sp"
        />
        <TextView
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="查看所有订单"
                android:textSize="14sp"
                android:textColor="@color/gray"
        />
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/my_info"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:onClick="showMyInfo"
            android:background="@color/white"
            android:layout_height="50dp">
        <ImageView
                android:paddingLeft="10dp"
                android:id="@+id/my_info_icon"
                android:layout_centerVertical="true"
                android:src="@mipmap/my_info_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/my_info_icon"
                android:layout_centerVertical="true"
                android:text="我的信息"
                android:textSize="18sp"
        />
        <TextView
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="查看信息"
                android:textSize="14sp"
                android:textColor="@color/gray"
        />
    </RelativeLayout>

</LinearLayout>