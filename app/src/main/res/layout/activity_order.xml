<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bg_gray"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:background="@color/white"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:id="@+id/order_btn_back"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_return"
                android:background="#00000000"
                android:layout_marginLeft="10dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitXY"/>
        <TextView
                android:text="确认订单"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>

    </RelativeLayout>
    <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:id="@+id/order_tv_receiverName"
                    android:text="张三"
                    android:textSize="17sp"
                    android:gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/order_tv_phone"
                    android:text="17379741111"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
                android:onClick="addressClick"
                android:id="@+id/order_layout_address"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Spinner
                    android:id="@+id/order_sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </Spinner>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:background="@color/white"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
            <ImageView
                    android:id="@+id/order_ig"
                    android:scaleType="fitXY"
                    android:src="@mipmap/category_zangzhu"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            <TextView
                    android:id="@+id/order_tv_name"
                    android:layout_toRightOf="@+id/order_ig"
                    android:text="藏猪"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="150dp"
                    android:layout_height="60dp"/>
            <TextView
                    android:id="@+id/order_tv_price"
                    android:layout_toRightOf="@+id/order_tv_name"
                    android:text="2000"
                    android:textSize="17sp"
                    android:layout_marginTop="5dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_toRightOf="@+id/order_ig"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="40dp"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_cart_num"
                    android:layout_marginTop="5dp"
            >
                <Button
                        android:id="@+id/order_btn_sub"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#00000000"
                        android:enabled="true"
                        android:layout_gravity="center_vertical"
                        android:text="-" />

                <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                <TextView
                        android:id="@+id/order_tv_num"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:background="#00000000"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:inputType="number"
                        android:text="1" />

                <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                <Button
                        android:onClick="AddClick"
                        android:id="@+id/order_btn_add"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#00000000"
                        android:layout_gravity="center_vertical"
                        android:text="+" />
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            <TextView
                    android:text="配送方式"
                    android:textSize="17sp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"/>
            <TextView
                    android:hint="普通配送"
                    android:textSize="17sp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_toLeftOf="@+id/order_tv_cost"
                    android:text="小计："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/order_tv_cost"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/red"
                    android:text="2000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
            android:id="@+id/order_commit_layout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:id="@+id/order_heji"
                android:text="合计："
                android:layout_marginLeft="80dp"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/order_total_cost"
                android:layout_toRightOf="@+id/order_heji"
                android:layout_centerVertical="true"
                android:text="2000"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <!--<Button-->
                <!--android:layout_toLeftOf="@+id/order_commit"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:id="@+id/order_cart"-->
                <!--android:textColor="@color/white"-->
                <!--android:background="@color/red"-->
                <!--android:text="加入购物车"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"/>-->

        <Button
                android:layout_alignParentRight="true"
                android:id="@+id/order_commit"
                android:textColor="@color/white"
                android:background="@color/red"
                android:text="提交订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>