    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:text="支付方式："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="线上支付"
            android:id="@+id/textView_paymentType"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:text="订单状态："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
