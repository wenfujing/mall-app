<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
        <ImageView
                android:id="@+id/cart_order_ig"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        <TextView
                android:id="@+id/cart_order_tv_name"
                android:layout_toRightOf="@+id/cart_order_ig"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="140dp"
                android:layout_height="60dp"/>
        <TextView
                android:id="@+id/cart_order_tv_price"
                android:layout_toRightOf="@+id/cart_order_tv_name"
                android:text="2000"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="60dp"/>
        <LinearLayout
                android:layout_toRightOf="@+id/cart_order_ig"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="10dp"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
        >
            <TextView
                    android:text="数量："
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/cart_order_tv_num"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:inputType="number"
                    android:text="1" />


        </LinearLayout>
        <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_width="130dp"
                android:layout_height="30dp">
            <TextView
                    android:layout_toLeftOf="@+id/cart_order_tv_cost"
                    android:text="小计："
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/cart_order_tv_cost"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/red"
                    android:text="2000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>